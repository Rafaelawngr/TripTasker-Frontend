<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvNomeViagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/edit_trip"
        android:src="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:onClick="deleteTrip"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/delete_trip"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/ivTripImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/trip_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image" />
</LinearLayout>
